{
  "manifest_version": 2,
  "name": "HistScrub",
  "version": "1.0",

  "description": "Scrubs your history. Deletes sites and cookies that are infrequently visited.",
  "homepage_url": "https://blog.circuitsofimagination.com",

  "icons": {
    "32":  "brush-32.png",
    "48":  "brush-48.png",
    "64":  "brush-64.png",
    "128": "brush-128.png"
  },

  "permissions": [
    "bookmarks",
    "browsingData",
    "cookies",
    "history",
    "tabs"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "32":  "brush-32.png",
      "48":  "brush-48.png",
      "64":  "brush-64.png",
      "128": "brush-128.png"
    },
    "default_title": "History Scrubber",
    "default_popup": "popup/histscrub.html"
  }
}
